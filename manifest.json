{
  "manifest_version": 2,

  "name": "Plaid Chrome Extension",
  "description": "Substitutes things for other things",
  "version": "0.1",

  "browser_action": {
    "default_icon": "assets/favicon.ico",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.1.1.slim.min.js","content_script.js"]
    }
  ],
  "background": {
    "scripts":["background.js"]
  }
}
